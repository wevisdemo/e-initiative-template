---
import Config from '../../e-initiative.config.mjs';
import Body from '../layouts/Body.astro';
import Navbar from '../components/Navbar.astro';
import LandingSection from '../components/LandingSection.astro';
import IntroSection from '../components/IntroSection.astro';
import SignSection from '../components/SignSection.astro';
import VolunteerSection from '../components/VolunteerSection.astro';
import AboutSection from '../components/AboutSection.astro';
import { isCampaignEnded } from '../utils/campaign';
---

<Body>
	<main class="flex flex-col">
		<LandingSection />
		<IntroSection />
		{
			!isCampaignEnded && (
				<>
					<SignSection />
					{Config.pettition.offline.volunteer && <VolunteerSection />}
				</>
			)
		}
		<AboutSection />
		<Navbar />
	</main>
</Body>
